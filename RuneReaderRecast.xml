<Ui xmlns="http://www.blizzard.com/wow/ui/">
  <Frame name="RuneReaderRecastFrame" id="RuneReaderRecastFrame" parent="UIParent" movable="true" hidden="false" frameStrata="HIGH">
    <Size>
      <AbsDimension x="200" y="50"/>
    </Size>
    <Anchors>
      <Anchor point="TOP" relativePoint="TOP" relativeTo="UIParent">
        <Offset>
          <AbsDimension x="0.0" y="0.0"/>
        </Offset>
      </Anchor>
    </Anchors>

    <Layers>
      <!-- Background texture -->
      <Layer level="BACKGROUND">
        <Texture name="$parentBG" file="Interface\Buttons\WHITE8x8" setAllPoints="true">
          <Color r="0.3" g="0.2" b="0" a="1"></Color>
        </Texture>
      </Layer>
      <!-- Text region displaying the recommendation (using a custom font) -->
      <Layer level="OVERLAY">
        <FontString name="$parentText" font="Interface\AddOns\RuneReaderRecast\Fonts\LibreBarcode39-Regular.ttf"
        outline ="NONE"
        wordwrap = "false">
          <Anchors>
            <Anchor point="TOPLEFT" relativePoint="TOPLEFT">
              <Offset>
                <AbsDimension x="0" y="5"/>
              </Offset>
            </Anchor>
            <Anchor point="BOTTOMRIGHT" relativePoint="BOTTOMRIGHT">
              <Offset>
                <AbsDimension x="0" y="-20"/>
              </Offset>
            </Anchor>
          </Anchors>

          <FontHeight val="40"></FontHeight>
          <color r="0" g="0" b="0"></color>
        </FontString>
      </Layer>
    </Layers>

    <Frames>
      <Frame name="$parentResizeGrip" movable="true">
        <Size>
          <AbsDimension x="16" y="16"/>
        </Size>
        <Anchors>
          <Anchor point="BOTTOMRIGHT">
            <Offset>
              <AbsDimension x="0" y="0"/>
            </Offset>
          </Anchor>
        </Anchors>
        <Layers>
          <Layer level="OVERLAY">
            <Texture file="Interface\ChatFrame\UI-ChatIM-SizeGrabber-Up" setAllPoints="true">
              <Color r="1" g="1" b="1" a="1"></Color>
            </Texture>

          </Layer>
        </Layers>
        <Scripts>
          <OnMouseDown>
            <![CDATA[
          if IsAltKeyDown() then
            self:GetParent():StartSizing("BOTTOMRIGHT");
          end
        ]]>
          </OnMouseDown>
          <OnMouseUp>
            <![CDATA[
          self:GetParent():StopMovingOrSizing();
        ]]>
          </OnMouseUp>
        </Scripts>
      </Frame>
    </Frames>

    <Scripts>
      <OnLoad>
        <![CDATA[
          RuneReader:DelayLoadRuneReaderRecast();
          self:RegisterForDrag("LeftButton");
        ]]>
      </OnLoad>
      
      

        <OnDragStart>
        <![CDATA[
        if IsAltKeyDown() then
          self:StartMoving();
        end
      ]]>
      </OnDragStart>
      <OnDragStop>
        <![CDATA[
        self:StopMovingOrSizing();
      ]]>
      </OnDragStop>  




    </Scripts>
  </Frame>
</Ui>
